{
  "name": "workshop-upload",
  "version": "1.0.4",
  "description": "Upload an addon to the Garry's Mod Steam Workshop.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "keywords": [
    "gmod",
    "workshop",
    "publish",
    "addon"
  ],
  "author": "dhkatz",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.13.13",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2",
    "vitest": "^3.0.9"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "@gmod-workshop/steamdown": "^1.0.0",
    "decompress": "^4.2.1",
    "glob": "^11.0.1"
  },
  "optionalDependencies": {
    "commander": "^13.1.0"
  },
  "tsup": {
    "format": [
      "esm"
    ],
    "clean": true,
    "sourcemap": true,
    "dts": true
  }
}
